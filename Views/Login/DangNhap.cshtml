@model mi_pham_kem.Models.SQLServer.User
@{
    Layout = null;
    ViewData["Title"] = "DangNhap";
}
<style>

</style>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/login.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Edu+NSW+ACT+Cursive:wght@400..700&family=Edu+VIC+WA+NT+Hand+Pre:wght@400..700&family=Pacifico&family=Quicksand:wght@300..700&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="box-login">
        @using (Html.BeginForm("DangNhap", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <br />
            <h2>Đăng nhập</h2>
            <br />
            <label>
                Tên đăng nhập:
                @Html.TextBoxFor(model => model.TenDangNhap, new { @class = "form-control", placeholder = "Tên đăng nhập" })
                @Html.ValidationMessageFor(model => model.TenDangNhap)
            </label><br />

            <label>
                Mật khẩu:
                @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control", placeholder = "Mật khẩu" })
                @Html.ValidationMessageFor(model => model.MatKhau)
            </label>
            <span onclick="togglePassword()" style="position: absolute; top: 55%; right: 10px; cursor: pointer;">
        <i id="eyeIcon" class="fa fa-eye"></i>
    </span>
            <br />

            @if (ViewBag.ErrorInfo != null)
            {
                <p class="text-danger">@ViewBag.ErrorInfo</p>
            }
            <br />
            <button type="submit" class="button-custom">Đăng nhập</button><br />
            <br />
            <a href="#" style="text-align: center;">Quên mật khẩu?</a><br />
            <br />
            <p>Bạn chưa có tài khoản? <a href="/Login/DangKy">Đăng ký ngay!</a></p>
        }
            </div>
</body>