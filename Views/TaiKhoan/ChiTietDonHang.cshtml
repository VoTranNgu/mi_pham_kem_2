@model mi_pham_kem.Models.SQLServer.DonHang

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .table td, .table th {
            vertical-align: middle;
        }

        .button-custom {
            display: inline-block;
            padding: 10px 25px;
            background-color: #de5f94;
            color: white;
            border: none;
            border-radius: 25px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .button-custom:hover {
                background-color: #c84f84;
                text-decoration: none;
                color: white;
            }
    </style>
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/css/TrangChuStyle.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Edu+NSW+ACT+Cursive:wght@400..700&family=Edu+VIC+WA+NT+Hand+Pre:wght@400..700&family=Pacifico&family=Quicksand:wght@300..700&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>

<div class="container mt-5">
    <h3 style="color: #de5f94; font-size: 35px; text-align: center; margin: 10px; font-weight: bold">Chi tiết đơn hàng #@Model.MaDh</h3>

    <div class="card mb-4 p-4 shadow-sm">
        <h3 style="font-size: 25px;font-weight: bold;color: #de5f94; text-align:center">
            Thông tin đơn hàng
        </h3>
        <p><strong>Ngày đặt:</strong> @Model.NgayDat.ToString("dd/MM/yyyy")</p>
        <p><strong>Trạng thái:</strong> @Model.TrangThai</p>
        <p><strong>Tổng tiền:</strong> @Model.TongTien.ToString("N0") VNĐ</p>
        <p><strong>Mã đã áp dụng:</strong> @(ViewBag.TenMaUuDai ?? "Chưa áp dụng mã")</p>
    </div>

    <div class="card shadow-sm p-4">
        <h3 style="font-size: 25px;font-weight: bold;color: #de5f94; text-align:center">
            Sản phẩm đã đặt
        </h3>
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Ảnh</th>
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Giá</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ChiTietDonHangs)
                {
                    <tr>
                        <td>
                            <img src="@item.MaSanPhamNavigation?.HinhAnh" width="80" height="80" alt="ảnh sản phẩm" />
                        </td>
                        <td>
                            <strong>@item.MaSanPhamNavigation?.TenSanPham</strong>
                        </td>
                        <td>@item.SoLuong</td>
                        <td>@item.DonGia.ToString("N0") VNĐ</td>
                        <td>@($"{item.SoLuong * item.DonGia:N0} VNĐ")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-4 text-center">
        @if (Model.TrangThai == "Đã xác nhận")
        {
            <form asp-action="HuyDonHang" asp-route-id="@Model.MaDh" method="post" onsubmit="return confirm('Bạn có chắc muốn hủy đơn hàng này không?');" >
                <button type="submit" class="button-custom" style="margin:20px">Hủy đơn hàng</button>
            </form>
        }
        else
        {
            <p class="text-muted" style="color: red; font-size:20px"><i>Đơn hàng không thể hủy vì đã chuyển sang trạng thái <strong>@Model.TrangThai</strong></i></p>
        }
        <button onclick="history.back()" class="button-custom">← Quay lại</button>
    </div>
</div>
