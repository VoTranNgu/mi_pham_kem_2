@model mi_pham_kem.Models.ViewModels.ThongTinTaiKhoanViewModel
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Thông Tin Tài Khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/TrangChuStyle.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Edu+NSW+ACT+Cursive:wght@400..700&family=Edu+VIC+WA+NT+Hand+Pre:wght@400..700&family=Pacifico&family=Quicksand:wght@300..700&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <style>
        .pagination .page-link {
            color: #de5f94;
            border-color: #de5f94;
        }

        .pagination .page-item.active .page-link {
            background-color: #de5f94;
            border-color: #de5f94;
            color: white;
        }

        .pagination .page-link:hover {
            background-color: #f8d4e3;
            border-color: #de5f94;
            color: #de5f94;
        }
    </style>
</head>

<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="p-4 shadow rounded bg-white">
                <h4 class="text-center" style="color: #de5f94; font-weight: bold;">Thông Tin Tài Khoản</h4>
                <hr />
                <p><strong>Họ tên:</strong> @Model.KhachHang.HoTen</p>
                <p><strong>Email:</strong> @Model.KhachHang.Email</p>
                <p><strong>Địa chỉ:</strong> @Model.KhachHang.DiaChi</p>
                <p><strong>Số điện thoại:</strong> @Model.KhachHang.Sdt</p>

                <div class="d-flex justify-content-center gap-3 mt-4 flex-wrap">
                    <a href="/TaiKhoan/SuaThongTin" class="button-custom">Chỉnh sửa thông tin</a>
                    <a href="/TaiKhoan/DoiMatKhau" class="button-custom">Đổi mật khẩu</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="p-4 shadow rounded bg-white">
                <h4 class="text-center" style="color: #de5f94; font-weight: bold;">Đơn Hàng Đã Đặt</h4>
                <hr />
                @if (Model.DonHangs != null && Model.DonHangs.Count > 0)
                {
                    <table class="table table-striped mt-3">
                        <thead class="table-light">
                            <tr style="text-align:center">
                                <th>Mã Đơn</th>
                                <th>Ngày Đặt</th>
                                <th>Tổng Tiền</th>
                                <th>Xem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dh in Model.DonHangs)
                            {
                                <tr>
                                    <td>@dh.MaDh</td>
                                    <td>@dh.NgayDat.ToString("dd/MM/yyyy")</td>
                                    <td>@dh.TongTien.ToString("N0") ₫</td>
                                    <td>
                                        <a href="@Url.Action("ChiTietDonHang", "TaiKhoan", new { id = dh.MaDh })">
                                            Xem chi tiết
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted text-center">Chưa có đơn hàng nào.</p>
                }
            </div>
            @if (Model.DonHangs.PageCount > 1)
            {
                <div class="d-flex justify-content-center mt-3">
                    @Html.PagedListPager(Model.DonHangs, page => Url.Action("ThongTin", "TaiKhoan", new { page }),
                    new PagedListRenderOptions
                    {
                        DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                        DisplayLinkToLastPage = PagedListDisplayMode.Always,
                        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                        DisplayLinkToNextPage = PagedListDisplayMode.Always,
                        MaximumPageNumbersToDisplay = 5,
                        UlElementClasses = new[] { "pagination" },
                        LiElementClasses = new[] { "page-item" },
                        PageClasses = new[] { "page-link" }
                    })
            </div>
                        }
        </div>
    </div>
</div>
