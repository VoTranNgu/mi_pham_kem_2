@model IEnumerable<mi_pham_kem.Models.SQLServer.SanPham>
@using mi_pham_kem.Models.SQLServer

@{
    ViewBag.Title = "TrangChu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("a").on('click', function (event) {
            if (this.hash !== "") {
                event.preventDefault();
                var hash = this.hash;
                $('html, body').animate({
                    scrollTop: $(hash).offset().top
                }, 800, function () {
                    window.location.hash = hash;
                });
            }
        });
    });
</script>


<style>
    .slideshow-container {
        width: 100%;
        overflow: hidden;
        position: relative;
    }

    .slides-wrapper {
        display: flex;
        width: 300%;
        transition: transform 1s ease-in-out;
    }

    .mySlide {
        width: 100vw;
        height: auto;
        object-fit: cover;
        flex-shrink: 0;
    }







    section.about{
        background-color: #de5f94;
    }

        section.about p{
            color: white;
        }

    section.product {
        padding: 30px;
    }

        section.product h1 {
            font-size: 70px;
            font-weight: normal;
            font-family: "Pacifico", cursive;
            color: #de5f94;
            text-align: center;
        }
</style>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/css/TrangChuStyle.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Edu+NSW+ACT+Cursive:wght@400..700&family=Edu+VIC+WA+NT+Hand+Pre:wght@400..700&family=Pacifico&family=Quicksand:wght@300..700&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <section class="video-section">
        <video autoplay muted loop playsinline class="bg-video">
            <source src="~/lib/image/banner_video2.mp4" type="video/mp4">
            Trình duyệt của bạn không hỗ trợ video.
        </video>
        <div class="content">
            <h1>chella</h1>
        </div>
    </section>
    <section class="uudai" style="margin-top:50px">
        <h2 style="font-size: 70px">Ưu đãi mới</h2>
        <br />
        <div class="slideshow-container">
            <div class="slides-wrapper">
                <img class="mySlide" src="~/lib/image/slide1.png" />
                <img class="mySlide" src="~/lib/image/slide2.png" />
                <img class="mySlide" src="~/lib/image/slide3.png" />
            </div>
        </div>


        <script>
            let slideIndex = 0;
            const slidesWrapper = document.querySelector('.slides-wrapper');
            const slides = document.querySelectorAll('.mySlide');
            const totalSlides = slides.length;

            function showSlides() {
                slideIndex = (slideIndex + 1) % totalSlides;
                slidesWrapper.style.transform = `translateX(-${slideIndex * 100}vw)`;
                setTimeout(showSlides, 2500);
            }

            window.addEventListener('DOMContentLoaded', showSlides);
        </script>



    </section>
    <section class="product">
        @Html.Partial("_SanPhamPartial", Model)
    </section>
    <section class="about" id="about">
        <div class="text" style=" text-align: justify ">
            <h2 style="font-size: 70px; text-align: left; color: white">Về chúng tôi</h2>
            <br />
            <p style="font-size: 20px; line-height: 1.5; max-width: 650px;">
                Chella là thương hiệu chuyên cung cấp mỹ phẩm chính hãng, an toàn và hiệu quả cho người tiêu dùng Việt.
                Chúng tôi cam kết mang đến sản phẩm chất lượng cao từ các thương hiệu uy tín trong và ngoài nước.
                Chella hướng đến trải nghiệm mua sắm trực tuyến tiện lợi, nhanh chóng và đáng tin cậy.
            </p>
            <button class="button-custom" style="margin-top:30px; background-color: white; color: #de5f94"> Tìm hiểu thêm </button>
        </div>
        @*<video width="900" height="550" flop autoplay muted>
                <source src="~/images/short.mp4" type="video/mp4" />
            </video>*@
        <video src="~/lib/image/banner.mp4" class="video" width="60%" height="600" style="margin-left:50px" loop autoplay muted></video>
        @*<div class="image">
            <img src="~/images/about.png" width="850" height="550" />*@

    </section>
</body>