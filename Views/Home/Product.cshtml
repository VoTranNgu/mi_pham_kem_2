@model IEnumerable<mi_pham_kem.Models.SQLServer.SanPham>
@using mi_pham_kem.Models.SQLServer

@{
    var danhGias = ViewBag.DanhGias as List<DanhGium> ?? new List<DanhGium>();
    var danhMucs = ViewBag.DanhMucs as List<DanhMucSp> ?? new List<DanhMucSp>();
    var thuongHieus = ViewBag.ThuongHieus as List<ThuongHieu> ?? new List<ThuongHieu>();
}


<head>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/css/TrangChuStyle.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Edu+NSW+ACT+Cursive:wght@400..700&family=Edu+VIC+WA+NT+Hand+Pre:wght@400..700&family=Pacifico&family=Quicksand:wght@300..700&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>

<style>
    #productList {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

        #productList > .product-item {
            flex: 0 0 calc(25% - 15px); /* tương đương col-lg-3 */
            display: flex;
        }



    section.product {
        padding: 30px;
    }

        section.product h1 {
            font-size: 70px;
            font-weight: normal;
            font-family: "Pacifico", cursive;
            color: #de5f94;
            text-align: center;
        }

    input.form-select,
    select.form-select {
        height: 50px;
        border: 2px solid #de5f94;
        border-radius: 25px;
        padding: 10px 15px;
        font-size: 16px;
        transition: border-color 0.3s ease;
    }

        input.form-select:focus,
        select.form-select:focus {
            outline: none;
            box-shadow: 0 0 0 3px rgba(222, 95, 148, 0.3);
            border-color: #de5f94;
        }
</style>

<section class="product">
    <br />
    <h1>Sản phẩm</h1>
    <br />
    <div class="row justify-content-center mb-4">
        <div class="col-md-4">
            <select id="thuongHieuFilter" class="form-select">
                <option value="all">Tất cả thương hiệu</option>
                @foreach (var th in thuongHieus)
                {
                    <option value="@th.MaTh">@th.TenThuongHieu</option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <select id="danhMucFilter" class="form-select">
                <option value="all">Tất cả danh mục</option>
                @foreach (var dm in danhMucs)
                {
                    <option value="@dm.MaDm">@dm.TenDanhMuc</option>
                }
            </select>
        </div>
    </div>

    <form method="get" asp-action="Product">
        <div class="row justify-content-center">
            <div class="col-md-6 d-flex">
                <input type="text" name="_name" class="form-select me-2" placeholder="Nhập tên sản phẩm..." />
                <input type="submit" value="Tìm kiếm" class="button-custom" />
            </div>
        </div>
    </form>

    <br />
    <div id="productList" class="d-flex flex-wrap" style="gap: 20px;">
        @foreach (var item in Model)
        {
            <div class="product-item mb-4 d-flex align-items-stretch">


                <div class="w-100">
                    <a href="@Url.Action("ChiTiet", "SanPham", new { id = item.MaSanPham })" class="text-decoration-none text-dark">
                        <div class="card custom-card product-card w-100 h-100 d-flex flex-column"
                             data-danhmuc="@item.MaDm" data-thuonghieu="@item.MaTh">
                            <img src="@item.HinhAnh" class="card-img-top" alt="Ảnh sản phẩm"
                                 style="height: 280px; object-fit: cover;" />
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title fw-bold" style="font-size:27px">@item.TenSanPham</h5>
                                    <p class="card-text text-black">
                                        @item.MaThNavigation.TenThuongHieu - @item.MaDmNavigation.TenDanhMuc
                                    </p>
                                    <p class="card-text">
                                        <span style="color: #de5f94; font-weight: bold; font-size: 24px">
                                            @String.Format("{0:N0}", item.Gia) ₫
                                        </span>
                                        <span class="text-muted text-decoration-line-through" style="font-weight: bold">
                                            @String.Format("{0:N0}", item.Gia + 20000) ₫
                                        </span>
                                    </p>
                                </div>

                                @{
                                    var danhGiaSp = danhGias.Where(dg => dg.MaSanPham == item.MaSanPham).ToList();
                                    var soDanhGia = danhGiaSp.Count;
                                    var diemTrungBinh = soDanhGia > 0 ? (int)Math.Round(danhGiaSp.Average(dg => dg.DiemDanhGia)) : 0;
                                }

                                @if (soDanhGia > 0)
                                {
                                    <div class="mb-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= diemTrungBinh)
                                            {
                                                <i class="fas fa-star text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-star text-secondary"></i>
                                            }
                                        }
                                        <span class="text-muted">(@soDanhGia đánh giá)</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="mb-2 text-muted fst-italic">Chưa có đánh giá</div>
                                }

                                <form asp-controller="GioHang" asp-action="Them" method="post" class="mt-3 text-center">
                                    <input type="hidden" name="maSanPham" value="@item.MaSanPham" />
                                    <input type="hidden" name="soLuong" value="1" />
                                    <button type="submit" class="button-custom" style="color: white;">
                                        Mua hàng
                                    </button>
                                </form>
                                <br />
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const thuongHieuFilter = document.getElementById("thuongHieuFilter");
        const danhMucFilter = document.getElementById("danhMucFilter");

        thuongHieuFilter.addEventListener("change", filterProducts);
        danhMucFilter.addEventListener("change", filterProducts);

        function filterProducts() {
            const selectedTH = thuongHieuFilter.value;
            const selectedDM = danhMucFilter.value;

            document.querySelectorAll(".product-card").forEach(card => {
                const th = card.getAttribute("data-thuonghieu");
                const dm = card.getAttribute("data-danhmuc");

                const matchTH = (selectedTH === "all" || selectedTH === th);
                const matchDM = (selectedDM === "all" || selectedDM === dm);

                card.parentElement.style.display = (matchTH && matchDM) ? "block" : "none";
            });
        }
    });
</script>
