@model IEnumerable<mi_pham_kem.Models.SQLServer.GioHang>
@using mi_pham_kem.Models.SQLServer

@{
    ViewData["Title"] = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .button-add {
        background-color: white;
        color: #ff69b4;
        padding: 10px 24px;
        border: 3px;
        border-color: #ff69b4;
        border-radius: 30px;
        font-size: 16px;
        font-weight: 500;
        border: none;
        display: inline-block;
        transition: all 0.3s ease;
        text-decoration: none;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    }

        .button-add:hover {
            background-color: #ff69b4;
            color: white;
            transform: scale(1.05);
        }
    input{
        height: 50px;
        border: 2px solid #de5f94;
        border-radius: 25px;
        padding: 10px 15px;
        font-size: 16px;
        transition: border-color 0.3s ease;
    }

    .order-summary {
        border: 2px solid #de5f94;
        border-radius: 20px;
        padding: 20px;
        position: relative;
        margin-top: 20px;
    }

    .order-title {
        position: absolute;
        top: -20px;
        left: 20px;
        background: #fff;
        padding: 0 10px;
        font-size: 25px;
        font-weight: bold;
        color: #de5f94;
        font-family: 'Pacifico', cursive;
    }

</style>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/css/TrangChuStyle.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Edu+NSW+ACT+Cursive:wght@400..700&family=Edu+VIC+WA+NT+Hand+Pre:wght@400..700&family=Pacifico&family=Quicksand:wght@300..700&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>

<body>
    
    <h2 style="margin-top:20px">Giỏ hàng</h2>
    <br />

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Ảnh</th>
                            <th>Sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.MaSanPhamNavigation?.HinhAnh" width="80" height="80" alt="ảnh sản phẩm" />
                                </td>
                                <td style="max-width: 200px; word-wrap: break-word; white-space: normal;">
                                    @item.MaSanPhamNavigation?.TenSanPham
                                </td>
                                <td>
                                    
                                    <div style="display: flex; align-items: center; gap: 5px;">
                                        <form asp-action="CapNhatSoLuong" method="post" style="display: inline;">
                                            <input type="hidden" name="maSanPham" value="@item.MaSanPham" />
                                            <input type="hidden" name="hanhDong" value="Giam" />
                                            <button type="submit" class="button-add">-</button>
                                        </form>

                                        <span style="min-width: 30px; text-align: center;">@item.SoLuong</span>

                                        <form asp-action="CapNhatSoLuong" method="post" style="display: inline;">
                                            <input type="hidden" name="maSanPham" value="@item.MaSanPham" />
                                            <input type="hidden" name="hanhDong" value="Tang" />
                                            <button type="submit" class="button-add">+</button>
                                        </form>
                                    </div>
                                </td>
                                <td>
                                    <form asp-action="Xoa" method="post">
                                        <input type="hidden" name="maSanPham" value="@item.MaSanPham" />
                                        <button type="submit" class="button-custom">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

                <div class="row justify-content-center mb-4">
                    <div class="col-md-4">
                        <a href="/Home/Product" class="button-custom">
                            Thêm sản phẩm
                        </a>

                    </div>
                    <div class="col-md-4">
                        <form asp-action="XoaTatCa" method="post" style="display:inline;">
                            <button type="submit" class="button-custom">Xóa tất cả</button>
                        </form>

                    </div>
                    <div class="col-md-4">
                        <button class="button-custom">Quay về</button>
                    </div>
                </div>
            </div>
            <div class="col-md-6" style="padding:10px">
                <div class="order-summary">
                    <div class="order-title">
                        <span>Đơn hàng của bạn</span>
                    </div>

                    <div class="order-body">
                        <p>Tạm tính: @string.Format("{0:N0} đ", ViewBag.TongTien)</p>
                        @if (ViewBag.GiaGiam != null && ViewBag.GiaGiam > 0)
                        {
                            <p style="color: green">Mã áp dụng: @ViewBag.MaUuDai</p>

                        }

                        else
                        {
                            <p>Nhập mã giảm giá:</p>
                            <div class="container">
                                <form asp-action="ApDungUuDai" method="post">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input name="maUuDai" placeholder="Nhập mã giảm giá" />
                                        </div>
                                        <div class="col-md-6">
                                            <button type="submit" class="button-custom">Xác nhận</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        }
                    @if (TempData["LoiUuDai"] != null)
                    {
                        <div class="alert alert-danger mt-2">@TempData["LoiUuDai"]</div>
                    }

                        <p style="margin-top:10px;">Giảm giá: <strong>@String.Format("{0:N0} đ", ViewBag.GiaGiam)</strong></p>
                        <p>Giảm còn: <strong>@string.Format("{0:N0} đ", (decimal)ViewBag.TongTien - (decimal)(ViewBag.GiaGiam ?? 0))</strong></p>
                        <hr />
                        <p style="color: #de5f94; font-weight: bold; font-size: 17px">
                            Tổng giá: @string.Format("{0:N0} đ", (decimal)ViewBag.TongTien - (decimal)(ViewBag.GiaGiam ?? 0))
                        </p>
                        <a href="~/ThanhToan/XacNhanDon" class="button-custom" style="text-decoration: none;">Tiến hành đặt hàng</a>
                    </div>
                </div>

            </div>
        </div>
    </div>

</body>