@model mi_pham_kem.Models.SQLServer.SanPham

@{
    ViewData["Title"] = "Đánh giá sản phẩm";
    Layout = null;
}
<meta charset="utf-8" />
<title>@ViewData["Title"]</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<style>
    body {
        background: linear-gradient(135deg, #e3f2fd, #fce4ec);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 30px;
    }

    .form-container {
        max-width: 600px;
        width: 100%;
    }

    .card {
        border: none;
        border-radius: 1rem;
        overflow: hidden;
    }

    .card-header {
        background: linear-gradient(to right, #007bff, #00c6ff);
    }

    .form-control, .form-select {
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            box-shadow: 0 0 10px rgba(0, 123, 255, 0.4);
            border-color: #007bff;
        }
</style>

<div class="container mt-5">
    <h2>Đánh giá cho sản phẩm: <strong>@Model.TenSanPham</strong></h2>

    @if (Model.DanhGia != null && Model.DanhGia.Any())
    {
        <table class="table table-bordered table-striped mt-4">
            <thead>
                <tr>
                    <th>Ngày</th>
                    <th>Điểm</th>
                    <th>Bình luận</th>
                    <th>Khách hàng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dg in Model.DanhGia)
                {
                    <tr>
                        <td>@dg.NgayTao</td>
                        <td>@dg.DiemDanhGia</td>
                        <td>@dg.BinhLuan</td>
                        <td>@dg.MaKhNavigation?.HoTen</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info mt-3">Sản phẩm này chưa có đánh giá nào.</div>
    }
</div>
