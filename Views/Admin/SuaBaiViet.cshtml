@model mi_pham_kem.Models.SQLServer.BaiViets

@{
    ViewData["Title"] = "Sửa bài viết";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #f3e5f5, #e1f5fe);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 30px;
        }

        .form-container {
            max-width: 800px;
            width: 100%;
        }

        .card {
            border: none;
            border-radius: 1rem;
            overflow: hidden;
        }

        .card-header {
            background: linear-gradient(to right, #6a1b9a, #8e24aa);
        }

        .form-control, .form-select, textarea {
            transition: all 0.3s ease;
        }

            .form-control:focus, .form-select:focus, textarea:focus {
                box-shadow: 0 0 10px rgba(142, 36, 170, 0.4);
                border-color: #8e24aa;
            }

        textarea {
            min-height: 150px;
        }
    </style>
</head>
<body>
    <div class="container mt-4 form-container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow">
                    <div class="card-header text-white">
                        <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Sửa bài viết</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="SuaBaiViet" method="post" asp-route-id="@Model.Id">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-group mb-3">
                                <label asp-for="TieuDe" class="form-label">Tiêu đề</label>
                                <input asp-for="TieuDe" class="form-control" placeholder="Nhập tiêu đề bài viết" />
                                <span asp-validation-for="TieuDe" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="AnhDaiDien" class="form-label">Ảnh đại diện (URL)</label>
                                <input asp-for="AnhDaiDien" class="form-control" placeholder="Nhập link ảnh đại diện" />
                                <span asp-validation-for="AnhDaiDien" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="NoiDung" class="form-label">Nội dung</label>
                                <textarea asp-for="NoiDung" class="form-control" placeholder="Nhập nội dung bài viết..."></textarea>
                                <span asp-validation-for="NoiDung" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label">Ngày đăng</label>
                                <input type="text" class="form-control" value="@Model.NgayDang.ToString("dd/MM/yyyy HH:mm")" readonly />
                            </div>

                            <div class="d-flex justify-content-between">
                                <a class="btn btn-secondary" asp-action="BaiVietAD">
                                    <i class="bi bi-arrow-left"></i> Quay về danh sách
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle"></i> Cập nhật bài viết
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
