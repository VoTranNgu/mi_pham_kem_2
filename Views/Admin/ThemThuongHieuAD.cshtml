@model mi_pham_kem.Models.SQLServer.ThuongHieu

@{
    ViewData["Title"] = "Thêm thương hiệu";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #e3f2fd, #fce4ec);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 30px;
        }

        .form-container {
            max-width: 600px;
            width: 100%;
        }

        .card {
            border: none;
            border-radius: 1rem;
            overflow: hidden;
        }

        .card-header {
            background: linear-gradient(to right, #007bff, #00c6ff);
        }

        .form-control, .form-select {
            transition: all 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                box-shadow: 0 0 10px rgba(0, 123, 255, 0.4);
                border-color: #007bff;
            }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header text-white">
                        <h4 class="mb-0">Thêm thương hiệu</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="ThemThuongHieuAD" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-group mb-3">
                                <label asp-for="TenThuongHieu" class="form-label">Tên thương hiệu</label>
                                <input asp-for="TenThuongHieu" class="form-control" />
                                <span asp-validation-for="TenThuongHieu" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a class="btn btn-secondary" asp-action="ThuongHieuAD">
                                    <i class="bi bi-arrow-left"></i> Quay về danh sách
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Thêm thương hiệu
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>