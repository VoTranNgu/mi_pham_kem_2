@model mi_pham_kem.Models.SQLServer.SanPham

@{
    Layout = "~/Views/Shared/_LayoutAD.cshtml"; ;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Thêm sản phẩm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5 border rounded shadow p-4">
        <h2 class="text-center mb-4">Thêm sản phẩm mới</h2>

        <form asp-action="ThemSanPham" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label">Tên sản phẩm</label>
                <input asp-for="TenSanPham" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Giá</label>
                <input asp-for="Gia" class="form-control" type="number" step="1000" />
            </div>
            <div class="mb-3">
                <label class="form-label">Số lượng</label>
                <input asp-for="SoLuong" class="form-control" type="number" />
            </div>
            <div class="mb-3">
                <label class="form-label">Mô tả</label>
                <textarea asp-for="MoTa" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Danh mục</label>
                <select asp-for="MaDm" class="form-select" asp-items="ViewBag.DanhMucs"></select>
            </div>
            <div class="mb-3">
                <label class="form-label">Thương hiệu</label>
                <select asp-for="MaTh" class="form-select" asp-items="ViewBag.ThuongHieus"></select>
            </div>
            <div class="mb-3">
                <label class="form-label">Hình ảnh (URL)</label>
                <input asp-for="HinhAnh" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Hình minh họa 1</label>
                <input asp-for="Hinh2" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Hình minh họa 2</label>
                <input asp-for="Hinh3" class="form-control" />
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-success">Thêm</button>
                <a asp-action="SanPhamAD" class="btn btn-secondary ms-2">Quay lại</a>
            </div>
        </form>
    </div>
</body>
</html>

