@model mi_pham_kem.Models.SQLServer.User
@{
    ViewData["Title"] = "Thêm tài khoản";
}

<h2 class="mt-4">Thêm tài khoản mới</h2>

<form asp-action="ThemUser" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Tên đăng nhập</label>
        @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label class="form-label">Mật khẩu</label>
        @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label class="form-label">Vai trò</label>
        @Html.DropDownListFor(m => m.Role, new SelectList(new[] {
        new { Value = "KhachHang", Text = "Khách hàng" },
        new { Value = "NhanVien", Text = "Nhân viên" }
        }, "Value", "Text"), "Chọn vai trò", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Tạo tài khoản</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
