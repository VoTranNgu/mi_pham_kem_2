@model List<mi_pham_kem.Models.SQLServer.UuDai>
@{
    ViewData["Title"] = "Quản lý Ưu đãi";
    Layout = "~/Views/Shared/_LayoutAd.cshtml";
}
<head>
    <meta charset="utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<div class="container-fluid px-4 mt-4">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3 rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-folder2-open me-2"></i>Quản lý ưu đãi</h4>
            <a class="btn btn-light text-primary fw-semibold rounded-pill" asp-controller="Admin" asp-action="ThemUuDai">
                <i class="bi bi-plus-circle-dotted me-1"></i> Thêm ưu đãi
            </a>
        </div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Nội dung</th>
            <th>Giảm giá</th>
            <th>Giá tối thiểu</th>
            <th>Thời hạn</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaUd</td>
                <td>@item.NoiDungMa</td>
                <td>@item.GiaGiam.ToString("N0") đ</td>
                <td>@(item.GiaToiThieu.HasValue ? item.GiaToiThieu.Value.ToString("N0") + " đ" : "-")</td>
                <td>@(item.ThoiHan.HasValue ? item.ThoiHan.Value.ToString("dd/MM/yyyy") : "-")</td>
                <td>
                    <a class="btn btn-warning" asp-action="SuaUuDai" asp-route-id="@item.MaUd">✏️</a>
                    <a class="btn btn-danger" asp-action="XoaUuDai" asp-route-id="@item.MaUd" onclick="return confirm('Bạn có chắc muốn xóa?');">🗑️</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>