@model mi_pham_kem.Models.SQLServer.DanhMucSp

@{
    ViewData["Title"] = "Chi tiết danh mục";
    Layout = null;
}
<meta charset="utf-8" />
<title>@ViewData["Title"]</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<style>
    body {
        background: linear-gradient(135deg, #e3f2fd, #fce4ec);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 30px;
    }

    .form-container {
        max-width: 600px;
        width: 100%;
    }

    .card {
        border: none;
        border-radius: 1rem;
        overflow: hidden;
    }

    .card-header {
        background: linear-gradient(to right, #007bff, #00c6ff);
    }

    .form-control, .form-select {
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            box-shadow: 0 0 10px rgba(0, 123, 255, 0.4);
            border-color: #007bff;
        }
</style>
<div class="container-fluid mt-4 px-4">
    <h2 class="text-primary fw-bold mb-4">Chi tiết danh mục</h2>

    <div class="card shadow-sm p-4 mb-4">
        <div class="row mb-3">
            <div class="col-sm-3 fw-bold">Mã danh mục:</div>
            <div class="col-sm-9">@Model.MaDm</div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-3 fw-bold">Tên danh mục:</div>
            <div class="col-sm-9">@Model.TenDanhMuc</div>
        </div>
    </div>

    <h4 class="text-primary fw-bold mb-4">Danh sách sản phẩm thuộc danh mục:</h4>

    @if (Model.SanPhams != null && Model.SanPhams.Any())
    {
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Mã SP</th>
                    <th>Tên SP</th>
                    <th>Giá</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var sp in Model.SanPhams)
                {
                    <tr>
                        <td>@sp.MaSanPham</td>
                        <td>@sp.TenSanPham</td>
                        <td>@sp.Gia.ToString("N0") đ</td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">Không có sản phẩm nào thuộc danh mục này.</div>
    }

    <a asp-action="DanhMucAd" class="btn btn-secondary mt-3">
        <i class="bi bi-arrow-left-circle"></i> Trở về danh sách
    </a>
</div>