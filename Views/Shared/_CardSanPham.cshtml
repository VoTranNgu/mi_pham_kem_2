@model mi_pham_kem.Models.SQLServer.SanPham
@{
    var danhGias = ViewData["DanhGias"] as List<mi_pham_kem.Models.SQLServer.DanhGium>;
    var danhGiaSp = danhGias?.Where(dg => dg.MaSanPham == Model.MaSanPham).ToList() ?? new List<mi_pham_kem.Models.SQLServer.DanhGium>();
    var soDanhGia = danhGiaSp.Count;
    var diemTrungBinh = soDanhGia > 0 ? (int)Math.Round(danhGiaSp.Average(dg => dg.DiemDanhGia)) : 0;
}
<head>
   
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/css/TrangChuStyle.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Edu+NSW+ACT+Cursive:wght@400..700&family=Edu+VIC+WA+NT+Hand+Pre:wght@400..700&family=Pacifico&family=Quicksand:wght@300..700&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>

<a href="@Url.Action("ChiTiet", "SanPham", new { id = Model.MaSanPham })"
   class="text-decoration-none text-dark"
   style="display:block;">
    <div class="card custom-card product-card w-100 h-100 d-flex flex-column"
         data-danhmuc="@Model.MaDm" data-thuonghieu="@Model.MaTh">
        <img src="@Model.HinhAnh" class="card-img-top" alt="Ảnh sản phẩm"
             style="height: 280px; object-fit: cover;" />
        <div class="card-body d-flex flex-column justify-content-between">
            <div>
                <h5 class="card-title fw-bold" style="font-size:27px">@Model.TenSanPham</h5>
                <p class="card-text text-black">
                    @Model.MaThNavigation?.TenThuongHieu - @Model.MaDmNavigation?.TenDanhMuc
                </p>
                <p class="card-text">
                    <span style="color: #de5f94; font-weight: bold; font-size: 24px">
                        @String.Format("{0:N0}", Model.Gia) ₫
                    </span>
                    <span class="text-muted text-decoration-line-through" style="font-weight: bold">
                        @String.Format("{0:N0}", Model.Gia + 20000) ₫
                    </span>
                </p>
            </div>

            @if (soDanhGia > 0)
            {
                <div class="mb-2">
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= diemTrungBinh)
                        {
                            <i class="fas fa-star text-warning"></i>
                        }
                        else
                        {
                            <i class="fas fa-star text-secondary"></i>
                        }
                    }
                    <span class="text-muted">(@soDanhGia đánh giá)</span>
                </div>
            }
            else
            {
                <div class="mb-2 text-muted fst-italic">Chưa có đánh giá</div>
            }

            <form asp-controller="GioHang" asp-action="Them" method="post" class="mt-3 text-center">
                <input type="hidden" name="maSanPham" value="@Model.MaSanPham" />
                <input type="hidden" name="soLuong" value="1" />
                <button type="submit" class="button-custom" style="color: white;">
                    Mua hàng
                </button>
            </form>
        </div>
    </div>
</a>
